# CodeIgniter 3 .gitignore

# ===========================================
# CodeIgniter Specific
# ===========================================

# Cache files
application/cache/*
!application/cache/index.html

# Log files
application/logs/*
!application/logs/index.html

# Keep .htaccess files
!application/*/.htaccess

# ===========================================
# Composer
# ===========================================
composer.lock
/vendor/

# ===========================================
# Environment & Configuration
# ===========================================
.env
application/config/environments/development.php
application/config/environments/testing.php
application/config/environments/production.php

# Database files
*.sqlite
*.sqlite3
*.db
tests/mocks/database/ci_test.sqlite

# ===========================================
# IDE & Editor Files
# ===========================================

# PHPStorm / IntelliJ
.idea/
*.iml
*.ipr
*.iws

# VS Code
.vscode/
*.code-workspace

# Sublime Text
*.tmlanguage.cache
*.tmPreferences.cache
*.stTheme.cache
*.sublime-workspace
*.sublime-project

# NetBeans
/nbproject/
/nbproject/private/

# Vim
*.swp
*.swo
*~

# Emacs
*~
\#*\#
/.emacs.desktop
/.emacs.desktop.lock
*.elc
auto-save-list
tramp
.\#*

# ===========================================
# OS Generated Files
# ===========================================

# macOS
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini
$RECYCLE.BIN/
